{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "logger_demo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/DEBUG/logger_demo",
            "args": ["~/logger_demo", 10],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}